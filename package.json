{
  "name": "pigu",
  "version": "1.0.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "kill": "lsof -ti :3012 | xargs kill -9 || true",
    "predev": "run-s db:generate lsof -ti :3012 | xargs kill -9 ",
    "dev": "concurrently \"npm run dev:scss\" \"react-router dev \" ",
    "dev:scss": "sass --watch app/styles:app/build",
    "build": "run-s db:generate build:scss && react-router build",
    "build:scss": "sass app/styles:app/build",
    "lint": "biome lint ./app",
    "start": "dotenv -- react-router-serve build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "start:prod": "npm run build && npm start",
    "start:dev": "npm run build && NODE_ENV=development npm start",
    "format": "prettier --write .",
    "clean": "rm -rf ./build ",
    "check": "biome check .",
    "check:fix": "biome check --fix .",
    "check:unused": "knip --max-issues 1",
    "check:unused:fix": "knip --fix",
    "setup": "run-s setup:db setup:seed",
    "setup:db": "prisma generate && prisma migrate deploy",
    "setup:seed": "prisma db seed",
    "db:prepare-migration": "prisma migrate dev --create-only --skip-seed",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "knip": "knip",
    "test": "vitest run",
    "test:dev": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "version:dev": "npm version --no-git-tag-version prerelease --preid=dev",
    "version:patch": "npm version --no-git-tag-version patch",
    "version:minor": "npm version --no-git-tag-version minor",
    "version:major": "npm version --no-git-tag-version major"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@marsidev/react-turnstile": "^1.3.0",
    "@mjackson/form-data-parser": "^0.9.1",
    "@prisma/client": "^6.15.0",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.2.2",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@react-router/node": "^7.8.2",
    "@react-router/serve": "^7.8.2",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.56.0",
    "@synet/unit": "^1.1.1",
    "@tailwindcss/typography": "^0.5.15",
    "class-variance-authority": "^0.7.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "composable-functions": "^5.0.0",
    "cookie": "^1.0.2",
    "dompurify": "^3.2.5",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^8.0.0",
    "flat-cache": "^6.1.9",
    "highlight.js": "^11.11.1",
    "isbot": "^4.4.0",
    "isomorphic-dompurify": "^2.23.0",
    "jsdom": "^26.1.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.542.0",
    "marked": "^16.2.1",
    "marked-base-url": "^1.1.7",
    "marked-highlight": "^2.2.2",
    "nodemailer": "^6.10.1",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.56.1",
    "react-router": "^7.8.2",
    "react-zorm": "^0.9.0",
    "remix-client-cache": "^3.0.0",
    "remix-forms": "^3.0.0",
    "remix-i18next": "^7.3.0",
    "remix-utils": "^8.8.0",
    "sass": "^1.91.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.4",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tiny-invariant": "^1.3.3",
    "unified": "^11.0.5",
    "usehooks-ts": "^3.1.1",
    "verror": "^1.10.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.3.0",
    "@flydotio/dockerfile": "^0.7.10",
    "@react-router/dev": "^7.8.2",
    "@react-router/fs-routes": "^7.8.2",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^9.1.0",
    "globals": "^15.15.0",
    "knip": "^5.50.5",
    "msw": "^2.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.49",
    "postcss-import": "^16.1.0",
    "prettier": "^3.5.3",
    "prisma": "^6.15.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.8.3",
    "vite": "^7.1.3",
    "vite-env-only": "^3.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "prisma": {
    "schema": "app/database/schema.prisma",
    "seed": "tsx app/database/seed.server.ts"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.40.0"
  }
}
